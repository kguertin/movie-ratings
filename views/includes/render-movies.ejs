<% movieData.forEach(movie => { %>
<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title pb-2"><%= movie.title %> (<%= movie.releaseYear %>)</h5>
    <p class="card-text"><%= movie.description %></p>
    <div class="card-buttons">
      <form action="/movies/<%= movie.movieId %>">
        <input type="hidden" name="movieId" value="<%= movie.movieId %>">
        <button type="submit" class="btn btn-secondary">Details</button>
      </form>
      <form action="">
        <input type="hidden" name="movieId" value="<%= movie.movieId %>">
        <button type="submit" class="btn btn-secondary">Add to Favourites</button>
      </form>
    </div>
  </div>
</div>
<% }) %>